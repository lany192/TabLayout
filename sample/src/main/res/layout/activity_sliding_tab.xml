<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#666666"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                app:tl_indicatorGravity="TOP"
                app:tl_textBold="SELECT"
                app:tl_underlineColor="#1A000000"
                app:tl_underlineGravity="TOP"
                app:tl_underlineHeight="1dp" />

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl_2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#EEEEEE"
                app:tl_dividerColor="#1A000000"
                app:tl_dividerPadding="13dp"
                app:tl_dividerWidth="1dp"
                app:tl_indicatorColor="#000000"
                app:tl_indicatorHeight="1.5dp"
                app:tl_indicatorWidthEqualTitle="true"
                app:tl_tabPadding="22dp"
                app:tl_tabSpaceEqual="true"
                app:tl_selectedTextColor="#000000"
                app:tl_unselectedTextColor="#66000000"
                app:tl_underlineColor="#1A000000"
                app:tl_underlineHeight="1dp" />

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl_3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#3F9FE0"
                app:tl_textAllCaps="true"
                app:tl_textBold="BOTH"
                app:tl_textSize="14sp" />

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl_4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#009688"
                app:tl_tabPadding="0dp"
                app:tl_tabWidth="95dp"
                app:tl_textSize="15sp" />

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl_5"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#F6CE59"
                app:tl_indicatorWidth="10dp" />

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl_6"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#EC7263"
                app:tl_indicatorCornerRadius="2dp"
                app:tl_indicatorHeight="4dp"
                app:tl_indicatorWidth="4dp" />

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl_7"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#57385C"
                app:tl_indicatorCornerRadius="1.5dp"
                app:tl_indicatorHeight="3dp"
                app:tl_indicatorWidth="10dp" />

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl_8"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#E45171"
                app:tl_indicatorColor="#eeeeee"
                app:tl_indicatorStyle="TRIANGLE" />

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl_9"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#6D8FB0"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                app:tl_indicatorMarginLeft="2dp"
                app:tl_indicatorMarginRight="2dp"
                app:tl_indicatorStyle="BLOCK" />

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tl_10"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#222831"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                app:tl_indicatorColor="#393E46"
                app:tl_indicatorCornerRadius="5dp"
                app:tl_indicatorMarginLeft="2dp"
                app:tl_indicatorMarginRight="2dp"
                app:tl_indicatorStyle="BLOCK" />

        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="84dp" />

    </LinearLayout>
</ScrollView>